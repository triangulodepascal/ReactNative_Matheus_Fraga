{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "react",
        "jsx-ally",
        "import"
    ],
    "extends": [
        "airbnb"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "global-require": "off",
        "import/prefer-default-export": "off",
        "no-unused-expressions": ["error", { "allowTaggedTemplates":  true}]
    }    
}
